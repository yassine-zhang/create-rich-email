{
  "name": "create-rich-email",
  "version": "1.2.5",
  "description": "A rich text mail template integration box, you can easily choose the right mail template in your own project.",
  "bin": {
    "create-rich-email": "outfile.cjs"
  },
  "files": [
    "outfile.cjs",
    "template"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "node ./scripts/build.mjs",
    "format": "prettier . --write",
    "integrate": "zx ./scripts/integrate.mjs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yassine-zhang/create-rich-email.git"
  },
  "keywords": [
    "rich",
    "text",
    "email",
    "template"
  ],
  "author": "Yassine-Zhang",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "0.19.4",
    "esbuild-plugin-license": "^1.2.2",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.1",
    "prettier": "3.0.3",
    "zx": "^7.2.3",
    "kolorist": "^1.8.0",
    "minimist": "^1.2.8",
    "prompts": "^2.4.2"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,md,json,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {}
}
